#!/bin/bash
FILEPATH_WITHOUT_EXT="${1%.*}"
FILENAME_WITHOUT_EXT=$(basename "$FILEPATH_WITHOUT_EXT")

touch "${FILEPATH_WITHOUT_EXT}.finished"

# Upload video file
rclone moveto --no-traverse "$1" "vtuber:/${1##${2}}"

# Upload else files
declare -a exts
exts=( "log" "jpg" "json")

for i in "${exts[@]}"; do
  tmp="${FILEPATH_WITHOUT_EXT}.${i}"
  rclone moveto --no-traverse "${tmp}" "vtuber:/${FILENAME_WITHOUT_EXT}/${tmp##${2}}"
done
